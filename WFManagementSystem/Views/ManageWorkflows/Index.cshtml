@model IEnumerable<WFMDatabase.Entities.Workflow>

@{
    var Workflows = (IEnumerable<WFMDatabase.Entities.Workflow>)ViewBag.Workflows;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <span class="btn btn-primary btn-sm">
            @Html.ActionLink("Vytvořit nový Workflow", "Create")
        </span>
    </p>
    <table class="table">
        <tr>
            <th>
                Název Workflow
            </th>
            <th>
                Datum vytvoření
            </th>
            @if (User.IsInRole("admin"))
            {
                <th>
                    Autor
                </th>
            }

            <th></th>
        </tr>

        @foreach (var item in Workflows)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DateTimeCreated
                </td>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        @item.UserCreated.UserName
                    </td>
                }
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
